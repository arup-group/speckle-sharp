<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
	<LangVersion>8.0</LangVersion>	
    <AssemblyName>Objects.Converter.OpenBridge</AssemblyName>
    <RootNamespace>Objects.Converter.OpenBridge</RootNamespace>
    <PackageId>Speckle.Objects.Converter.OpenBridge</PackageId>
    <Authors>Arup</Authors>
    <Company>Arup</Company>
    <Description>Converter for OpenBridge Designer Connect</Description>		
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE;OPENBRIDGE</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DefineConstants>TRACE;OPENBRIDGE</DefineConstants>
  </PropertyGroup>

  <Import Project="..\ConverterBentleyShared\ConverterBentleyShared.projitems" Label="Shared" />

  <ItemGroup>
    <ProjectReference Include="..\..\..\..\Core\Core\Core.csproj" />
    <ProjectReference Include="..\..\..\Objects\Objects.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Speckle.MicroStation.API" Version="0.0.0" />
    <PackageReference Include="Speckle.OpenRoads.OpenRail.API" Version="0.0.0" />
  </ItemGroup>

   <PropertyGroup>
    <IsDesktopBuild Condition="'$(IsDesktopBuild)' == ''">true</IsDesktopBuild>
  </PropertyGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent"  Condition="'$(IsDesktopBuild)' == true">
    <Exec Condition="$([MSBuild]::IsOsPlatform('Windows'))" Command="xcopy /Y /S &quot;$(TargetDir)$(AssemblyName).dll&quot; &quot;$(AppData)\Speckle\Kits\Objects\&quot;" />
  </Target>

</Project>
